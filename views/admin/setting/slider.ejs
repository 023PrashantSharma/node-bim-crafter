						</thead>
					</table>
				</div>
				<div id="msg"></div>
			</div>
		</div>
	</div>
</div>

<!-- Add Games modal start -->
<div class="modal fade" id="addSliderImageModal" role="dialog" aria-hidden="true">
	<div class="modal-dialog modal-frame modal-top modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Add Slider Image</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>         
			</div>
			<div class="modal-body p-0 pt-2 games_body ">        
				<form method="post" id="sliderImageFrm" class="separate-form validation-form-container">
					<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
						<div class="row">
							<div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
								<div class="form-group m-b-30">
									<label for="profile_picture" class="col-form-label">Upload Image(Allow Only.jpeg,.jpg,.png)</label>
									<div class="input-group">
										<div class="input-group-prepend">
											<div class="fileUpload btn btn-secondary upload-btn">
												<span class="upl" id="upload">Upload Image</span>
												<input type="file"  id="pro_pic" class="upload up" onchange="imageUpload(this.id,'uploads/slider/','profile_picture','pro_pic_view','pro_pic_remove',1)"/>
												<input type="hidden" name="profile_picture" id="profile_picture" value="">
											</div>
										</div>
										<input type="text" placeholder="No File chosen" class="form-control empimage in_field img_error" name="prof_pic" id="prof_pic" value="" readonly>
                                        <div class="ui corner label" style="top: 0;">
                                            <i class="asterisk icon">*</i>
                                        </div>
									</div>
									<div class="progress progress_pro">
									    <div class="progress-bar progress-bar-striped progress-bar-animated"></div>
									</div>
								</div>
							</div>
							<div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-12">
								<span class="doc_append">
									<img id="pro_pic_view" src="" class="pro_pic_view"/>
								</span>
								<input type="button" id="pro_pic_remove" value="x" class="pro_pic_remove rmv rmv1" onclick="removeImage(this.id,'pro_pic','pro_pic_view','profile_picture','uploads/slider/',1);" style="display:none"/>
							</div>
							<div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12">
								<div class="form-group">
									<label for="exampleInputEmail1">Display Order</label>
									<input type="number" min=0 name="display_order" id="display_order" class="form-control in_field" placeholder="Enter Display Order" value=""/>
									<div class="ui corner label star_box" id="demo1">
										<i class="asterisk icon">*</i>
									</div>
								</div>
							</div>
						</div>
						<div class="form-group mb-0">
							<button type="submit" class="effect-btn btn btn-primary squer-btn mt-2" id="submitBtn"><i class="fa fa-spin fa-spinner mr-2" id="btn_spinner_4"></i>Submit</button>
							<button type="reset" class="effect-btn btn btn-danger squer-btn mt-2 mr-2"><span>Reset</span></button>
						</div>
						<div class="form-group mt-2">
							<p id="errorValueMsg"></p>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<!-- Add Games modal end -->

