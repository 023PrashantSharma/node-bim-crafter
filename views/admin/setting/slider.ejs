<div class="row">
	<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
		<div class="card table-card">
			<div class="card-header pb-0">
				<div class="d-flex justify-content-between">
					<h4 class="card-title mg-b-0"><%= title %></h4>
					<!-- <a class="effect-btn btn btn-primary squer-btn mr-2 openPopupAddStarlineGames"  href="javascript:void(0);" data-href="<%= admin %>/add-starline-games/0" role="button" data-toggle="modal">Add Slider Image</a>	 -->
					<a class="effect-btn btn btn-primary squer-btn mr-2" href="#addSliderImageModal" role="button" data-toggle="modal">Add Slider Image</a>
				</div>
			</div>
			<div class="card-body">
				<div class="table-responsive">
					<table id="sliderImageList" class="table table-striped table-bordered" style="width:100%">
						<thead>
							<tr>
								<th>#</th>
								<th>Slider Image</th>
								<th>Display Order</th>
								<th>Creation Date</th>
								<th>Status</th>
